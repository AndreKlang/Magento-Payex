<?xml version="1.0"?>
<config>
    <modules>
        <AAIT_PartPayment>
            <!-- declare module's version information for database updates -->
            <version>1.0.3</version>
        </AAIT_PartPayment>
    </modules>

    <global>
        <!-- declare model group for new module -->
        <models>
            <!-- model group alias to be used in Mage::getModel('newmodule/...') -->
            <partpayment>
                <!-- base class name for the model group -->
                <class>AAIT_PartPayment_Model</class>
            </partpayment>
        </models>

        <!-- IMPORTANT: if you use your own namespace (i.e. CompanyName) you also have to declare blocks group for new module. See topic: http://www.magentocommerce.com/boards/viewthread/22416/#t102732 -->
        <blocks>
            <partpayment>
                <class>AAIT_PartPayment_Block</class>
            </partpayment>
        </blocks>

        <helpers>
            <partpayment>
                <class>AAIT_PartPayment_Helper</class>
            </partpayment>
        </helpers>

        <!-- declare resource setup for new module -->
        <resources>
            <!-- resource identifier -->
            <partpayment_setup>
                <!-- specify that this resource is a setup resource and used for upgrades -->
                <setup>
                    <!-- which module to look for install/upgrade files in -->
                    <module>AAIT_PartPayment</module>
                </setup>
                <!-- specify database connection for this resource -->
                <connection>
                    <!-- do not create new connection, use predefined core setup connection -->
                    <use>core_setup</use>
                </connection>
            </partpayment_setup>
            <partpayment_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </partpayment_write>
            <partpayment_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </partpayment_read>
        </resources>

        <sales>
            <quote>
                <totals>
                    <partpayment>
                        <class>partpayment/quote_total</class>
                        <after>subtotal,discount,shipping</after>
                        <before>tax,grand_total</before>
                        <renderer>partpayment/checkout_fee</renderer>
                        <admin_renderer>partpayment/adminhtml_sales_order_create_totals_fee</admin_renderer>
                    </partpayment>
                </totals>
            </quote>
            <!-- disabled due to https://github.com/PayEx/Magento-modules/issues/11
            <order_invoice>
                <totals>
                    <partpayment>
                        <class>partpayment/invoice_total</class>
                    </partpayment>
                </totals>
            </order_invoice>
            -->
        </sales>

        <events>
            <sales_order_invoice_save_after>
                <observers>
                    <partpayment>
                        <type>singleton</type>
                        <class>partpayment/observer</class>
                        <method>sales_order_invoice_save_after</method>
                    </partpayment>
                </observers>
            </sales_order_invoice_save_after>
            <sales_quote_collect_totals_after>
                <observers>
                    <partpayment>
                        <type>singleton</type>
                        <class>partpayment/observer</class>
                        <method>sales_quote_collect_totals_after</method>
                    </partpayment>
                </observers>
            </sales_quote_collect_totals_after>
            <sales_order_payment_place_end>
                <observers>
                    <partpayment>
                        <type>singleton</type>
                        <class>partpayment/observer</class>
                        <method>sales_order_payment_place_end</method>
                    </partpayment>
                </observers>
            </sales_order_payment_place_end>
        </events>
    </global>

    <!-- declare default configuration values for this module -->
    <default>
        <!-- 'payment' configuration section (tab) -->
        <payment>
            <!-- 'newmodule' configuration group (fieldset) -->
            <partpayment>
                <!-- by default this payment method is inactive -->
                <active>1</active>
                <!-- model to handle logic for this payment method -->
                <model>partpayment/payment</model>
                <!-- default title for payment checkout page and order view page -->
                <title>Payex PartPayment</title>
                <allowspecific>0</allowspecific>
                <debug>1</debug>
                <accountnumber>payex account number</accountnumber>
                <encryptionkey>payex encryption key</encryptionkey>
                <order_status_authorize>processing</order_status_authorize>
                <order_status_capture>complete</order_status_capture>
                <clientlanguage>en-US</clientlanguage>
                <paymentfee>0</paymentfee>
                <cleantime>20</cleantime>
            </partpayment>
        </payment>
    </default>

    <adminhtml>
        <!-- Translations... -->
        <translate>
            <modules>
                <AAIT_PartPayment>
                    <files>
                        <default>AAIT_PartPayment.csv</default>
                    </files>
                </AAIT_PartPayment>
            </modules>
        </translate>

        <!-- Updates layout... -->
        <layout>
            <updates>
                <partpayment>
                    <file>partpayment.xml</file>
                </partpayment>
            </updates>
        </layout>
    </adminhtml>

    <frontend>
        <!-- Routes... -->
        <routers>
            <partpayment>
                <use>standard</use>
                <args>
                    <module>AAIT_PartPayment</module>
                    <frontName>partpayment</frontName>
                </args>
            </partpayment>
        </routers>

        <!-- Translations... -->
        <translate>
            <modules>
                <AAIT_PartPayment>
                    <files>
                        <default>AAIT_PartPayment.csv</default>
                    </files>
                </AAIT_PartPayment>
            </modules>
        </translate>

        <!-- Updates layout... -->
        <layout>
            <updates>
                <partpayment>
                    <file>partpayment.xml</file>
                </partpayment>
            </updates>
        </layout>
    </frontend>

    <crontab>
        <jobs>
            <partpayment_clean_pending_orders>
                <schedule>
                    <cron_expr>*/5 * * * *</cron_expr>
                </schedule>
                <run>
                    <model>partpayment/observer::cleanPendingOrders</model>
                </run>
            </partpayment_clean_pending_orders>
        </jobs>
    </crontab>
</config>
